/*
    Variable Types: Boolean, Integer, Float, Char, String
*/
ALGORITHM types
VAR
    i : INTEGER := 26;
    f : FLOAT := 4.56;
    c : CHAR := 'c';
    s : STRING := 'str';
    b : BOOLEAN := TRUE;
BEGIN
    f := i; // correct
    i := f; // wrong
    // we cannot mix types
    f := c; // wrong
    s := c; // wrong
    b := i; // wrong
END

/*
    ARITHMETIC INSTRUCTIONS
    Addition -> outcome := a+b
    Subtraction -> outcome := a-b
    Multiplication -> outcome := a*b
    Division -> outcome := a/b
    Modulo -> outcome := a%b
*/
outcome := 1 + 2
outcome := 1 - 2
outcome := 1 * 2
outcome := 1 / 2
